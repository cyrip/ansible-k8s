apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ cert_manager.vars.email_address }}
    privateKeySecretRef:
      name: {{ cert_manager.vars.sercret_ref }}
    solvers:
    - http01:
        ingress:
          class: nginx
